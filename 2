        if not blobss:
            speed_L = -900
            speed_R = -900
            speed_B = -900



        elif blobss:
            if (78<(blobss[0]).w()<=93):
                if blobsss :
                    speed_L = 900
                    speed_R = -900
                    speed_B = 0

                if not blobsss :
                    speed_L = 0
                    speed_R = 0
                    speed_B = -900

            elif (blobss[0]).w() > 93 :
                if 0<(blobss[0]).cx()<=50:
                    speed_L = -800
                    speed_R = -800
                    speed_B = -800

                elif 250<(blobss[0]).cx()<=300:
                    speed_L = 800
                    speed_R = 800
