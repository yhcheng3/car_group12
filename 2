speed = 1200        # 基准速度（控制整体前进速度，小车运行时的基本速度）
speed_L = 0         # 左轮速度暂存全局变量（各电机的实际速度值：基准±偏差值）
speed_R = 0         # 右轮速度暂存全局变量
